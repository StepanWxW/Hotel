<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <include
            android:id="@+id/item_button_facilities"
            layout="@layout/item_button_details"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26828796"
            android:layout_marginTop="10dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toBottomOf="@+id/item_button_facilities"
            app:layout_constraintStart_toStartOf="@id/item_button_facilities"
            app:layout_constraintEnd_toEndOf="@id/item_button_facilities"/>

        <include
            android:id="@+id/item_button_included"
            layout="@layout/item_button_details"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/item_button_facilities"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26828796"
            android:layout_marginTop="10dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/item_button_included"
            app:layout_constraintStart_toStartOf="@id/item_button_included"
            app:layout_constraintEnd_toEndOf="@id/item_button_included"/>

        <include
            android:id="@+id/item_button_not_included"
            layout="@layout/item_button_details"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
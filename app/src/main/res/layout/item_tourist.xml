<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCountTourist"
            style="@style/TextStyle22BlackDisplay"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/item_field_name"
            layout="@layout/item_field_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewCountTourist"
            app:layout_constraintTop_toBottomOf="@+id/textViewCountTourist" />

        <include
            android:id="@+id/cardView2Email"
            layout="@layout/item_field_email"
            style="@style/MarginTop8End16HeightWrapWidth0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewCountTourist"
            app:layout_constraintTop_toBottomOf="@+id/item_field_name" />

        <include
            android:id="@+id/cardView2Date"
            layout="@layout/item_field_date_of_birth"
            style="@style/MarginTop8End16HeightWrapWidth0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/cardView2Email"
            app:layout_constraintTop_toBottomOf="@+id/cardView2Email" />

        <include
            android:id="@+id/cardView2Citizenship"
            layout="@layout/item_field_citizenship"
            style="@style/MarginTop8End16HeightWrapWidth0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/cardView2Date"
            app:layout_constraintTop_toBottomOf="@+id/cardView2Date" />

        <include
            android:id="@+id/cardView2PassportNumber"
            layout="@layout/item_field_passport_number"
            style="@style/MarginTop8End16HeightWrapWidth0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/cardView2Citizenship"
            app:layout_constraintTop_toBottomOf="@+id/cardView2Citizenship" />

        <include
            android:id="@+id/cardView2PassportValidityPeriod"
            style="@style/MarginTop8End16HeightWrapWidth0"
            layout="@layout/item_field_passport_validity_period"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/cardView2PassportNumber"
            app:layout_constraintTop_toBottomOf="@+id/cardView2PassportNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
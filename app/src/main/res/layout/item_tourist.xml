<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrowImageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textViewCountTourist"
                style="@style/TextStyle22BlackDisplay"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/arrow_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrowImageView">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardName"
                    style="@style/CustomCardStyle"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textName"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputName"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/name_hint"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textName"
                            app:layout_constraintTop_toBottomOf="@+id/textName" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2Surname"
                    style="@style/CustomCardStyleMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textSurname"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/surname"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputSurname"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/surname_hint"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textSurname"
                            app:layout_constraintTop_toBottomOf="@+id/textSurname" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomCardStyleMargin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textDateOfBirth"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/date_of_birth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputDateOfBirth"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/hint_date_of_birth"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textDateOfBirth"
                            app:layout_constraintTop_toBottomOf="@+id/textDateOfBirth" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2Citizenship"
                    style="@style/CustomCardStyleMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textCitizenship"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/Citizenship"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputCitizenship"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/hint_citizenship"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textCitizenship"
                            app:layout_constraintTop_toBottomOf="@+id/textCitizenship" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2PassportNumber"
                    style="@style/CustomCardStyleMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textPassportNumber"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/number_passport"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputPassportNumber"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/hint_passport_number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textPassportNumber"
                            app:layout_constraintTop_toBottomOf="@+id/textPassportNumber" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2PassportValidityPeriod"
                    style="@style/CustomCardStyleMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textValidityPeriod"
                            style="@style/TextStyle12MiddleGreyDisplay"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/passport_validity_period"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/inputValidityPeriod"
                            style="@style/ItemFieldEditStyle"
                            android:hint="@string/hint_passport_validity_period"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textValidityPeriod"
                            app:layout_constraintTop_toBottomOf="@+id/textValidityPeriod" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>